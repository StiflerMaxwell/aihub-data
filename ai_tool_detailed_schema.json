{
  "type": "object",
  "properties": {
    "basic_info": {
      "type": "object",
      "properties": {
        "product_name": {
          "type": "string",
          "description": "AI工具的产品名称"
        },
        "product_introduction": {
          "type": "string", 
          "description": "产品的主要介绍或描述"
        },
        "product_story": {
          "type": "string",
          "description": "产品的故事或背景信息"
        },
        "product_url": {
          "type": "string",
          "description": "工具的官方网站URL"
        },
        "logo_img_url": {
          "type": "string",
          "description": "产品Logo图片的URL"
        },
        "overview_img_url": {
          "type": "string", 
          "description": "产品概览或截图图片的URL"
        },
        "author_company": {
          "type": "string",
          "description": "开发公司或作者名称"
        },
        "primary_task": {
          "type": "string",
          "description": "工具的主要功能分类"
        },
        "tag": {
          "type": "string",
          "description": "产品标签，多个标签用逗号分隔"
        },
        "popularity_score": {
          "type": "string",
          "description": "受欢迎程度评分"
        },
        "initial_release_date": {
          "type": "string",
          "description": "首次发布日期"
        },
        "number_of_tools_by_author": {
          "type": "string",
          "description": "作者开发的工具数量"
        },
        "is_verified_tool": {
          "type": "boolean",
          "description": "是否为验证过的工具"
        }
      }
    },
    "pricing": {
      "type": "object", 
      "properties": {
        "general_price_tag": {
          "type": "string",
          "description": "总体价格标签，如Free、Freemium、Paid等"
        },
        "pricing_model": {
          "type": "string",
          "description": "定价模式，如Subscription、One-time、Free等"
        },
        "paid_options_from": {
          "type": "string",
          "description": "付费选项起始价格"
        },
        "billing_frequency": {
          "type": "string",
          "description": "计费频率，如Monthly、Annually等"
        },
        "currency": {
          "type": "string",
          "description": "货币类型，如USD、CNY等"
        }
      }
    },
    "features": {
      "type": "object",
      "properties": {
        "inputs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "工具支持的输入类型列表，如Text、Audio、Image等"
        },
        "outputs": {
          "type": "array", 
          "items": {
            "type": "string"
          },
          "description": "工具支持的输出类型列表，如Video、Image、Code等"
        },
        "pros": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "工具的优点列表"
        },
        "cons": {
          "type": "array",
          "items": {
            "type": "string"  
          },
          "description": "工具的缺点列表"
        },
        "related_tasks": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "相关任务列表"
        }
      }
    },
    "reviews": {
      "type": "object",
      "properties": {
        "user_ratings_count": {
          "type": "string",
          "description": "用户评分总数"
        },
        "average_rating": {
          "type": "string", 
          "description": "平均评分，如4.5/5"
        },
        "how_would_you_rate_text": {
          "type": "string",
          "description": "评分提示文本"
        }
      }
    },
    "job_impacts": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "job_type": {
            "type": "string",
            "description": "受影响的工作类型"
          },
          "impact_description": {
            "type": "string",
            "description": "影响描述"
          },
          "tasks_affected": {
            "type": "string",
            "description": "受影响的任务"
          },
          "ai_skills_required": {
            "type": "string", 
            "description": "需要的AI技能"
          }
        }
      },
      "description": "工具对不同工作的影响"
    },
    "alternatives": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "alternative_name": {
            "type": "string",
            "description": "替代工具名称"
          },
          "alternative_url": {
            "type": "string",
            "description": "替代工具URL"
          },
          "relationship_type": {
            "type": "string",
            "description": "关系类型，如Most Popular Alternative"
          }
        }
      },
      "description": "替代工具列表"
    },
    "releases": {
      "type": "array",
      "items": {
        "type": "object", 
        "properties": {
          "release_product_name": {
            "type": "string",
            "description": "发布版本的产品名称"
          },
          "release_date": {
            "type": "string",
            "description": "发布日期"
          },
          "release_notes": {
            "type": "string",
            "description": "发布说明"
          },
          "release_author": {
            "type": "string",
            "description": "发布作者"
          }
        }
      },
      "description": "版本发布历史"
    },
    "see_also": {
      "type": "object",
      "properties": {
        "featured_matches": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "精选匹配工具列表"
        },
        "other_tools": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "其他相关工具列表"
        }
      }
    }
  }
} 